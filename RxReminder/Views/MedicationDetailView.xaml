<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:RxReminder.ViewModels"
             x:Class="RxReminder.Views.MedicationDetailView"
             x:DataType="vm:MedicationDetailViewModel"
             Title="Medication Details">

    <StackLayout Padding="10">
        <Entry Placeholder="Name" Text="{Binding Medication.Name}" />
        <Entry Placeholder="Dosage" Text="{Binding Medication.Dosage}" />
        <Entry Placeholder="Notes" Text="{Binding Medication.Notes}" />
        <Entry Placeholder="Total Doses" Keyboard="Numeric" Text="{Binding Medication.TotalDoses}" />
        <Entry Placeholder="Refill Threshold" Keyboard="Numeric" Text="{Binding Medication.RefillThreshold}" />
        <Entry Placeholder="Rx Number" Text="{Binding Medication.RxNumber}" />

        <Button Text="Save Changes" 
                VerticalOptions="EndAndExpand" 
                HorizontalOptions="FillAndExpand" 
                Command="{Binding SaveMedicationCommand}" />

        <Button Text="Delete Medication" 
                VerticalOptions="EndAndExpand" 
                HorizontalOptions="FillAndExpand" 
                Command="{Binding DeleteMedicationCommand}" 
                BackgroundColor="Red" 
                TextColor="White" />
    </StackLayout>
</ContentPage>
