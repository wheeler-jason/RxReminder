<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:RxReminder.ViewModels"
             x:Class="RxReminder.Views.MedicationInputForm"
             Title="Add New Medication">

    <StackLayout Padding="10">
        <Entry Placeholder="Name" Text="{Binding Name}" />
        <Entry Placeholder="Dosage" Text="{Binding Dosage}" />
        <Entry Placeholder="Notes" Text="{Binding Notes}" />
        <Entry Placeholder="Total Doses" Keyboard="Numeric" Text="{Binding TotalDoses}" />
        <Entry Placeholder="Refill Threshold" Keyboard="Numeric" Text="{Binding RefillThreshold}" />
        <Entry Placeholder="Rx Number" Text="{Binding RxNumber}" />

        <Button Text="Save" 
                VerticalOptions="EndAndExpand" 
                HorizontalOptions="FillAndExpand" 
                Command="{Binding SaveMedicationCommand}" />
    </StackLayout>
</ContentPage>
